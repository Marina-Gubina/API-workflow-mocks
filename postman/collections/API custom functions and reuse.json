							"let jsonData = pm.response.json();",
							"",
							"console.log(jsonData.length)",
							"",
							"console.log(jsonData[jsonData.length-1].id)",
							"let id = jsonData[jsonData.length-1].id",
							"pm.environment.set(\"task_id\", id)",
							"",
							"pm.environment.set(\"ids\", [])",
							"",
							"let currentAmountOfTasks = jsonData.length",
							"",
							"pm.environment.set(\"currentAmountOfTasks\", currentAmountOfTasks)",
							"pm.environment.set(\"targetNumberOfTasks\", currentAmountOfTasks + 5)",
							"",
							"if (currentAmountOfTasks < pm.environment.get(\"targetNumberOfTasks\")) {",
							"    pm.execution.setNextRequest(\"create a task\")",
							"} else {",
							"    pm.execution.setNextRequest(\"change a task\")",
							"}",
							"",
							"",
							"pm.test('Response Status Code is 200', function () {",
							"    pm.expect(pm.response.code).to.equal(200);",
							"})",
							"",
							"pm.test('Response is an array with at least one element', function () {",
							"    const responseData = pm.response.json();",
							"    pm.expect(responseData).to.be.an('array').that.is.not.empty;",
							"})",
							"",
							"pm.test('Response contains required fields', function () {",
							"    const responseData = pm.response.json();",
							"    pm.expect(responseData).to.be.an('array').that.is.not.empty;",
							"    responseData.forEach(task => {",
							"        pm.expect(task).to.be.an('object').that.has.all.keys('id', 'text', 'answer', 'title');",
							"    });",
							"})",
							"",
							"pm.test('ID is a non-negative integer', function () {",
							"    const responseData = pm.response.json();",
							"    pm.expect(responseData).to.be.an('array');",
							"    responseData.forEach(task => {",
							"        pm.expect(task).to.have.property('id');",
							"        pm.expect(task.id).to.be.a('number').and.to.be.at.least(0);",
							"    });",
							"})"
						],
